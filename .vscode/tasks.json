{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build/debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build/release",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build Video Composer (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/debug",
                "--target",
                "video_composer",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "dependsOn": "CMake Configure (Debug)"
        },
        {
            "label": "CMake Build Video Composer (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/release",
                "--target",
                "video_composer",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": "CMake Configure (Release)"
        },
        {
            "label": "CMake Build Test RGBA (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/debug",
                "--target",
                "test_rgba",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": "CMake Configure (Debug)"
        },
        {
            "label": "CMake Build Test RGBA (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/release",
                "--target",
                "test_rgba",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": "CMake Configure (Release)"
        },
        {
            "label": "CMake Build All (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/debug",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": "CMake Configure (Debug)"
        },
        {
            "label": "CTest Run All (Debug)",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build/debug",
                "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "CMake Build All (Debug)"
        },
        {
            "label": "CTest Run All (Release)",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build/release",
                "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": [],
            "dependsOn": "CMake Configure (Release)"
        }
    ]
}